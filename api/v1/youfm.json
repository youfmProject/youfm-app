{
    "swagger":"2.0",
    "info":{
        "version":"v1",
        "title": "YouFm data schema",
        "description": "This API is the spec for managing data being fed into the youfm player"
    },
    "schemes":[
        "https",
        "http"
    ],
    "consumes":[
        "application/json"
    ],
    "produces":[
        "application/json"
    ],
    "basePath":"/api/v1",
    "paths":{
        "/albums":{
            "get":{
                "x-swagger-router-controller": "albums",
                "operationId": "getAlbums",
                "tags": [
                    "/"
                ],
                "description": "This API returns the intial lists of albums needed to render the landing page",
                "parameters":[],
                "responses":{
                    "200": {
                        "description": "Get the album details",
                        "schema":{
                            "$ref": "#/definitions/albums"
                        }
                    },
                    "default":{
                        "description": "Error Scenario",
                        "schema":{
                            "$ref": "#/definitions/Message"   
                        }
                    }
                }
            }
        },
        "/spotify":{
            "get":{
                "x-swagger-router-controller": "search",
                "operationId": "searchSpotify",
                "tags":[
                    "/"
                ],
                "description": "This is the API for searching a keyword in spotify",
                "parameters":[
                    {
                        "name": "search",
                        "in": "query",
                        "type": "string",
                        "description": "Search Keyword for spotify search"
                    }
                ],
                "responses":{
                    "200":{
                        "description": "Search results for spotify",
                        "schema": {
                            "$ref": "#/definitions/spotify"
                        }
                    },
                    "default": {
                        "description": "Error Scenario",
                        "schema":{
                            "$ref": "#/definitions/Message"   
                        }
                    }  
                }
            }
        },
        "/youtube": {
            "get":{
                "x-swagger-router-controller": "search",
                "operationId": "searchYoutube",
                "tags":[
                    "/"
                ],
                "description": "This is the API for searching a keyword in youtube",
                "parameters":[
                    {
                        "name": "song",
                        "in": "query",
                        "type": "string",
                        "description": "Search Keyword for youtube search"
                    }
                ],
                "responses":{
                    "200":{
                        "description": "Search results for youtube",
                        "schema": {
                            "$ref": "#/definitions/youtube"
                        }
                    },
                    "default": {
                        "description": "Error Scenario",
                        "schema":{
                            "$ref": "#/definitions/Message"   
                        }
                    }  
                }
            }
        }
    },
    "definitions":{
        "albums":{
            "type":"object",
            "properties":{
                "newReleases":{
                    "type": "array",
                    "items":{
                        "type":"object",
                        "properties":{
                            "artist": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            },
                            "albumType": {
                                "type": "string"
                            },
                            "images": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            }
                        }
                    }
                },
                "popular":{
                    "type":"array",
                    "items":{
                        "type":"object",
                        "properties":{
                            "id":{
                                "type":"string"   
                            },
                            "images":{
                                "type": "string"
                            },
                            "tracks": {
                                "type":"string"
                            },
                            "name":{
                                "type": "string"   
                            }
                        }
                    }
                },
                "billboard":{
                    "type":"array",
                    "items":{
                        "type":"object",
                        "properties":{
                            "name":{
                                "type":"string"   
                            },
                            "rank":{
                                "type":"string"   
                            },
                            "artist":{
                                "type":"string"   
                            },
                            "image":{
                                "type":"string"   
                            }
                        } 
                    }
                }
            }
        },
        "youtube":{
            "type":"array",
            "items":{
                "type": "object",
                "properties":{
                    "id":{
                        "type":"string"   
                    },
                    "name":{
                        "type":"string"
                    }
                } 
            }
        },
        "spotify":{
            "type":"array",
            "items": {
                "type":"object",
                "properties": {
                    "name":{
                        "type":"string"
                    },
                    "albumName":{
                        "type":"string"
                    },
                    "artist":{
                        "type":"string"
                    },
                    "image":{
                        "type":"string"
                    }
                }
            }
        },
        "Message":{
            "required":[
                "message"
            ],
            "properties":{
                "message":{
                    "type": "string"
                }   
            }
        }
    }
}